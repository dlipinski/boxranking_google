mixin cateringRow (catering, index)
    .card.mb-1(style='border-radius:10px;')
        .card-body.bg-light(style='border-radius:10px;')
            .row.catering-row(class=`logo${index}`)
                .col-sm-2.mb-1.col-logo.mt-1
                    .logo Dieta pude≈Çowa Elo Melo
                if !catering.diets[2]
                    .col-sm-10.align-middle-my
                        table.diet-table
                            tbody
                                each diet in [catering.diets[0], catering.diets[1]]
                                    tr
                                        td= diet.type
                                        td
                                            table
                                                tbody
                                                    each caloriesPrice in diet.caloriesPrices
                                                        tr
                                                            td= caloriesPrice.calories + ' kcal'
                                                            td= caloriesPrice.price + ' pln'
                else
                    .col-sm-5.align-middle-my.first
                        table.diet-table
                            tbody
                                each diet in [catering.diets[0], catering.diets[1]]
                                    tr
                                        td= diet.type
                                        td
                                            table
                                                tbody
                                                    each caloriesPrice in diet.caloriesPrices
                                                        tr
                                                            td= caloriesPrice.calories + ' kcal'
                                                            td= caloriesPrice.price + ' pln'
                    .col-sm-5.align-middle-my.second
                        table.diet-table
                            tbody
                                each diet in [catering.diets[2], catering.diets[3]]
                                    tr
                                        td= diet.type
                                        td
                                            table
                                                tbody
                                                    each caloriesPrice in diet.caloriesPrices
                                                        tr
                                                            td= caloriesPrice.calories + ' kcal'
                                                            td= caloriesPrice.price + ' pln'